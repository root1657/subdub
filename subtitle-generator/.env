# API Configuration
DEEPL_API_KEY=your-deepl-api-key-here
GOOGLE_TRANSLATE_KEY=your-google-key-optional

# Processing Settings
WHISPER_MODEL=base  # tiny, base, small, medium, large
MAX_CONCURRENT_JOBS=2
AUTO_CREATE_DIRS=true

# Unraid Paths (overridden by GUI config)
INPUT_VIDEOS_PATH=/mnt/user/videos
OUTPUT_SUBTITLES_PATH=/mnt/user/subtitles
TRANSCRIPTS_PATH=/mnt/user/appdata/subtitle-generator/transcripts

# Resources
CPU_LIMIT=2.0
MEMORY_LIMIT=4G

# Network Shares (optional)
SMB_SERVER=192.168.1.100
SMB_SHARE=videos
SMB_USERNAME=user
SMB_PASSWORD=pass